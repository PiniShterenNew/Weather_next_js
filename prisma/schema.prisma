generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String     @id @default(cuid())
  clerkId     String     @unique
  email       String?
  name        String?
  preferences Json?
  userCities  UserCity[]
  currentLocation UserCurrentLocation?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([clerkId])
}

model City {
  id         String     @id @default(cuid())
  lat        Float
  lon        Float
  cityEn     String
  cityHe     String
  countryEn  String
  countryHe  String
  userCities UserCity[]
  currentLocations UserCurrentLocation[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@unique([lat, lon])
}

model UserCity {
  id               String   @id @default(cuid())
  userId           String
  cityId           String
  sortOrder        Int      @default(0)
  isCurrentLocation Boolean  @default(false)
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  city             City     @relation(fields: [cityId], references: [id], onDelete: Cascade)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@unique([userId, cityId])
  @@index([userId])
  @@index([cityId])
}

model PushSubscription {
  id        String   @id @default(cuid())
  userId    String?  // Clerk user ID if available
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([endpoint])
}

model UserCurrentLocation {
  id            String   @id @default(cuid())
  userId        String   @unique
  cityId        String
  lastCheckedAt DateTime @default(now())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  city City @relation(fields: [cityId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([cityId])
}

model WeatherCache {
  cityId    String   @id
  payload   Json
  updatedAt DateTime @updatedAt

  @@index([updatedAt])
}
